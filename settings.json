{
  // ============================================================================
  // Neovim Configuration
  // ============================================================================
  // Note: Paths use ~ (tilde) which Neovim expands to home directory - works across machines
  "vscode-neovim.neovimInitVimPaths.darwin": "~/Library/Application Support/Cursor/User/nvim/init.lua",
  "vscode-neovim.neovimInitVimPaths.win32": "~/AppData/Roaming/Cursor/User/nvim/init.lua",
  "vscode-neovim.neovimInitVimPaths.linux": "~/.config/Cursor/User/nvim/init.lua",

  // ============================================================================
  // Editor Settings
  // ============================================================================
  "editor.lineNumbers": "relative",
  "editor.fontFamily": "JetBrains Mono",
  "editor.fontLigatures": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,

  // ============================================================================
  // Terminal Settings
  // ============================================================================
  "terminal.integrated.sendKeybindingsToShell": true,

  // ============================================================================
  // Workbench Settings
  // ============================================================================
  "workbench.iconTheme": "symbols",
  "zenMode.centerLayout": false,
  "zenMode.hideLineNumbers": false,
  "zenMode.fullScreen": false,

  // ============================================================================
  // Accessibility Settings
  // ============================================================================
  "accessibility.dimUnfocused.enabled": true,
  "accessibility.dimUnfocused.opacity": 0.5,

  // ============================================================================
  // File Explorer Settings
  // ============================================================================
  "explorer.compactFolders": false,
  "files.exclude": {
    "**/.git": false
  },

  // ============================================================================
  // Git Settings
  // ============================================================================
  "git.autofetch": true,
  "gitlens.changes.locations": ["gutter", "overview"],

  // ============================================================================
  // TypeScript/JavaScript Settings
  // ============================================================================
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",

  // ============================================================================
  // Cursor AI Settings
  // ============================================================================
  "cursor.composer.shouldAllowCustomModes": true,
  "cursor.composer.shouldChimeAfterChatFinishes": true,
  "cursor.agent_layout_browser_beta_setting": true,
  "cursor.cpp.disabledLanguages": [],

  // ============================================================================
  // Extension Settings
  // ============================================================================
  // Find It Faster
  "find-it-faster.general.restoreFocusTerminal": true,
  "find-it-faster.general.killTerminalAfterUse": true,
  "find-it-faster.general.showMaximizedTerminal": true,

  // ============================================================================
  // Update Settings
  // ============================================================================
  "update.releaseTrack": "prerelease"
}
